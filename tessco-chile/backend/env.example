# Database Configuration (PostgreSQL)
DATABASE_URL="postgresql://postgres:carlosvas12@localhost:5432/tessco_chile?schema=public"

# JWT
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_EXPIRES_IN="7d"

# MercadoPago
MERCADOPAGO_ACCESS_TOKEN="your-mercadopago-access-token"
MERCADOPAGO_PUBLIC_KEY="your-mercadopago-public-key"
MERCADOPAGO_WEBHOOK_SECRET="your-mercadopago-webhook-secret"
MERCADOPAGO_WEBHOOK_URL=""  # Opcional: URL personalizada para webhook (por defecto usa API_BASE_URL/api/payments/webhook)
MERCADOPAGO_CLIENT_ID=""
MERCADOPAGO_CLIENT_SECRET=""

# Email
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
FROM_EMAIL="noreply@tesscochile.cl"
FROM_NAME="Tessco Chile"
SALES_NOTIFICATION_EMAIL="ventas@tesscochile.cl"  # Email donde se enviarán notificaciones de nuevas órdenes

# Server
PORT=4000
NODE_ENV="development"
CORS_ORIGIN="http://localhost:3000"  # Orígenes permitidos para CORS (puede ser múltiples separados por coma)
FRONTEND_URL="http://localhost:3000"  # URL del frontend (usado para construir URLs de redirección)
API_BASE_URL="http://localhost:4000"

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH="./uploads"

# Rate Limiting
# Ventana de tiempo en milisegundos (15 minutos = 900000ms)
RATE_LIMIT_WINDOW_MS=900000
# Número máximo de peticiones permitidas en la ventana de tiempo (aumentado de 100 a 2000)
RATE_LIMIT_MAX_REQUESTS=2000
